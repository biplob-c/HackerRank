#include <iostream>
#include <cmath>
#include <vector>
#include <iomanip>

using namespace std;


int main()
{
    int n;
    string arr[10][10];
    cin >> n;

    for (int i = 0; i < n; i++) {
        for (int j = n - i; j > 1; j--) {
            cout << " ";
        }
        for (int k = 0; k <= i; k++) {
            cout << "#";
        }
        cout << endl;
    }
    return 0;
}

